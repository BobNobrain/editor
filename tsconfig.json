{
    "include": ["src"],
    "exclude": [
        "**/tests/**",
        "**/*.test.ts",
        "**/*.spec.ts"
    ],
    "compilerOptions": {
        "strict": true,
        "noImplicitAny": true,
        "useUnknownInCatchVariables": true,
        "target": "ES2015",
        "declaration": true,
        "outDir": "dist",
        "sourceMap": true,
        "moduleResolution": "node"
    }
}
